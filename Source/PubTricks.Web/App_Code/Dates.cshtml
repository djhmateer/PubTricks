@functions{
    //used in front end summary of tricks and back end index page
    public static dynamic ChopOffTime(DateTime str) {
        var date = str.ToString("dd MMM, yyyy");
        
        return new HtmlString(date);
    }
}

@helper ShortDate(DateTime date) {
    <div class="quote">
        @ChopOffTime(date)
    </div>    
}