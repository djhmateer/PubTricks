@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>@Html.ActionLink("Tricks", "Index", "Tricks") > Edit @Model.Name</h3>
@Form.ValidatorScripts()
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    //todo refactor becuase if anything is in TempData then this will call
    if (@TempData.Keys.Count != 0) { 
    <div class="error">
        @TempData["Error"]
    </div>
    }
    @Form.HiddenID(Model.ID)
    @Form.RenderCreateOrEditTricks(Model)
}
