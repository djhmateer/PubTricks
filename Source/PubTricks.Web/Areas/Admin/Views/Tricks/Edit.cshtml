@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>@Html.ActionLink("Tricks", "Index", "Tricks") > Edit @Model.Name</h3>
@Form.ValidatorScripts()

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @TempData["Error"]
    @Form.HiddenID(Model.ID)
    
    @Form.RenderCreateOrEditTricks(Model)
}
